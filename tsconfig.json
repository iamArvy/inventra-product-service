{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "events/*": [
        "src/messaging/events/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "helpers/*": [
        "./src/common/helpers/*"
      ],
      "category/*": [
        "./src/category/*"
      ],
      "product/*": [
        "./src/product/*"
      ]
    }
  }
}